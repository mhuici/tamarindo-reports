# TamarindoReports Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE (Railway PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://user:password@host:5432/tamarindo?schema=public"

# ===========================================
# REDIS (Railway Redis - for job queue)
# ===========================================
REDIS_URL="redis://default:password@host:6379"

# ===========================================
# APPLICATION
# ===========================================
NUXT_PUBLIC_APP_URL="http://localhost:3000"
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# ===========================================
# GOOGLE (Google Cloud Console)
# ===========================================
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Google Ads API Developer Token
# Apply at: https://developers.google.com/google-ads/api/docs/first-call/dev-token
GOOGLE_ADS_DEVELOPER_TOKEN="your-developer-token"

# ===========================================
# FACEBOOK (Meta Developer)
# ===========================================
# Create at: https://developers.facebook.com/apps
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# ===========================================
# OPENAI (AI Insights)
# ===========================================
# Get at: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key"

# ===========================================
# STORAGE (Cloudflare R2)
# ===========================================
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_BUCKET_NAME="tamarindo-reports"
R2_PUBLIC_URL="https://your-bucket.r2.cloudflarestorage.com"

# ===========================================
# EMAIL (Optional - for report delivery)
# ===========================================
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-smtp-user"
# SMTP_PASS="your-smtp-password"
# SMTP_FROM="reports@tamarindoreports.com"
